{% if home %}
  <header class="site-header">
    <h1 id="title">{{ site.title }}</h1>
    <div class="tagline">{{ site.tagline }}</div>
  </header>
  {% include "./search.html" %}
{% else %}
  <header class="site-header-small">
    <h1 id="title-small"><a id="home" href="{{ site.baseURL }}">{{ site.title }}</a></h1>
  </header>
{% endif %}
