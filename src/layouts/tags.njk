{% extends "base.njk" %}

{% block main %}

  <h4>Tagovani postovi:</h4>
  <h1>{{ content }}</h1>


<article class="posts">
  {% set posts = site.pages | within('/posts/') | sortBy('date') | reverse | filterTags(content) %}

  {% for k, v in posts | groupByYear('date') %}
    <section>
      <h2>{{ k }}</h2>
      <ol>
        {% for i in v %}
          <li>
            <time datetime="{{ i.date | dateISO }}">{{ i.date | rsDateShort }}</time>
            <a href="{{ i.url }}">{{ i.title }}</a>
          </li>
        {% endfor %}
      </ol>
    </section>
  {% endfor %}
</article>


{% endblock %}

