{% extends "base.njk" %}

{% block main %}

  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{{ title }}</h1>
      <time class="post-date" datetime="{{ date | dateISO }}">{{ date | rsDateLong }}</time>
    </header>

    {% include "partials/share-links.njk" %}

    {{ content | safe }}

  </article>

  <ul class="tags">
    {% for t in tags %}
      {% set tagPage = site.pageOfCollection('tags', t) %}

      <li class="tag"><a href="{{ tagPage.url }}">{{ t }}</a></li>
    {% endfor %}
  </ul>

{% endblock %}

